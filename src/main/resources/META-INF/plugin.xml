<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.fiskirton.gitlabciplugin</id>
    <name>GitlabCI</name>
    <vendor>fiskirton</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>PsiViewer</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.gitlabci.plugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.gitlabci.plugin.services.MyProjectService"/>
<!--        <toolWindow id="Gitlab Pipeline Preview" secondary="false" icon="GitlabCIPluginIcons.GitlabYamlIcon" anchor="right"-->
<!--                    factoryClass="com.gitlabci.plugin.windows.pipeline.PipelinePreviewWindowFactory"/>-->
        <fileType name="Gitlab YAML File"
                  implementationClass="com.gitlabci.plugin.language.GitlabYamlFileType"
                  fieldName="INSTANCE"
                  language="GitlabYaml"
                  extensions="gitlab-ci.yml"
                  patterns="*.gitlab-ci*"
        />
        <lang.parserDefinition
            language="GitlabYaml"
            implementationClass="com.gitlabci.plugin.language.pasrser.GitlabYamlParserDefinition"/>
        <lang.syntaxHighlighterFactory
            language="GitlabYaml"
            implementationClass="com.gitlabci.plugin.language.highlighter.GitlabYamlSyntaxHighlighterFactory"/>
        <colorSettingsPage
            implementation="com.gitlabci.plugin.language.highlighter.GitlabYamlColorSettingsPage"/>
        <completion.contributor
            language="GitlabYaml"
            order="first"
            implementationClass="com.gitlabci.plugin.language.completion.GitlabYamlCompletionContributor"/>
        <lang.foldingBuilder
            language="GitlabYaml"
            implementationClass="com.gitlabci.plugin.language.editor.GitlabYamlFoldingBuilder"/>
        <annotator
            language="GitlabYaml"
            implementationClass="com.gitlabci.plugin.language.editor.GitlabYamlErrorAnnotator"/>
        <lang.documentationProvider
            language="GitlabYaml"
            implementationClass="com.gitlabci.plugin.language.documentation.GitlabYamlDocumentationProvider"/>

    </extensions>

    <applicationListeners>
        <listener class="com.gitlabci.plugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
